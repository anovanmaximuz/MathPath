<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

        <TextView
            android:id="@+id/answerListItemNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:layout_weight="1"
            android:height="40sp"
            android:width="5dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/answerListItemEquation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2+2"
            android:layout_weight="1"
            android:height="40sp"
            android:width="50dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/answerListItemUserAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:height="40sp"
            android:width="50dp"
            android:textAlignment="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/answerListItemRightAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:height="40sp"
            android:width="50dp"
            android:textAlignment="center"
            android:gravity="center"
            />

</LinearLayout>